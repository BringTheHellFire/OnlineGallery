@model APIArtworkWithPagination

<div class="container-fluid">
    <div class="row">

        @foreach(APIArtworkData data in Model.Data)
        {
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <div class="d-flex justify-content-center pb-5">
                    <div class="artwork-post-container">
                        <div class="d-flex justify-content-center">
                            <div class="artwork-image-container">
                                <img class="img-fluid rounded" src="@(Model.config.iiif_url + "/" + data.image_id + "/full/843,/0/default.jpg")" />
                            </div>
                        </div>
                        <div class="d-flex justify-content-start pt-1">
                            @if(data.Title.Length >= 30)
                            {
                                <p class="fw-bold">@(data.Title.Substring(0, 26) + "...")</p>
                            }
                            else
                            {
                                 <p class="fw-bold">@data.Title</p>
                            }
                        </div>
                        <div class="d-flex justify-content-end faded">
                            @if(data.artist_title != null)
                            {
                                <p>@data.artist_title</p>
                            }
                            else
                            {
                                <p>No author registered</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<div class="container">
    <ul class="pagination justify-content-center">
        <li class="page-item"><a class="page-link" asp-action="GoNextPage" asp-route-number="1">1</a></li>
        <li class="page-item"><a class="page-link" asp-action="GoNextPage" asp-route-number="2">2</a></li>
        <li class="page-item"><a class="page-link" asp-action="GoNextPage" asp-route-number="3">3</a></li>
        <li class="page-item"><a class="page-link" asp-action="GoNextPage" asp-route-number="4">4</a></li>
    </ul>
</div>
