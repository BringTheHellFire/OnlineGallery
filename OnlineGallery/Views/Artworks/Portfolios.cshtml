@model List<OnlineGallery.Model.UserArtwork>

<div class="container">

    <div class="row">

        @foreach (var artwork in Model)
        {
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <div class="d-flex justify-content-end">
                    <img src="~/files/@artwork.ImageName" class="rounded img-fluid h-100">
                </div>
                <div class="d-flex justify-content-start pt-1">
                            @if(artwork.Name.Length >= 30)
                            {
                                <p class="fw-bold">@(artwork.Name.Substring(0, 26) + "...")</p>
                            }
                            else
                            {
                                 <p class="fw-bold">@artwork.Name</p>
                            }
                        </div>
                        <div class="d-flex justify-content-end faded">
                            @if(artwork.User != null && artwork.User.Email != null)
                            {
                                <p>@artwork.User.Email</p>
                            }
                            else
                            {
                                <p>No author registered</p>
                            }
                        </div>
            </div>
        }
        

    </div>

</div>