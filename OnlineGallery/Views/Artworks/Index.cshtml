@model List<OnlineGallery.Model.UserArtwork>


<div class="container-fluid d-flex">
    <div class="portfolio-folders-container sticky-top">
        <div class="sidebar" id="sidebar">
            <div class="sidebar-header px-2 pt-3 pb-4">
                <div class="d-flex">
                    <h3> <span class="bg-white text-dark rounded box-shadow px-3 me-2">Folders</span> </h3>
                </div>
                <div class="d-flex justify-content-end">
                    <button asp-action="AddFolder" class="btn p-2 text-dark bg-white"> <span><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder-plus" viewBox="0 0 16 16">
