  <path d="M13.5 10a.5.5 0 0 1 .5.5V12h1.5a.5.5 0 1 1 0 1H14v1.5a.5.5 0 1 1-1 0V13h-1.5a.5.5 0 0 1 0-1H13v-1.5a.5.5 0 0 1 .5-.5z"/>
</svg></span> </button>
                </div>
            </div>
             <ul class="list-unstyled px-2">
                <li class="">Test</li>
                <li class="">Test</li>
                <li class="">Test</li>
                <li class="">Test</li>
                <li class="">Test</li>
            </ul>
            <hr class="hr-color mx-2" />
        </div>
    </div>
    <div class="portfolio-folder-display-container">
        <a class="text-dark" asp-action="CreatePost">Add Artwork</a>


        @if(Model != null)
        {
            foreach(var artwork in Model)
            {
                <p>@artwork.Description</p>
                <a asp-action="Edit" asp-route-id="@artwork.Id">Edit</a>
                <a asp-action="Delete" asp-route-id="@artwork.Id">Delete</a>
            }
        }
    </div>
</div>











