@model OnlineGallery.Model.Folder

@if(Model != null)
{
    <h3>@Model.Name</h3>
    @if(Model.Id != 0)
    {
        <a class="text-dark" asp-action="Create" asp-route-folderId="@Model.Id">Add Artwork</a>
    }
    if(Model.Artworks != null)
    {
        foreach (var artwork in Model.Artworks)
        {
            <p>@artwork.Description</p>
            <a asp-action="Edit" asp-route-id="@artwork.Id">Edit</a>
            <a asp-action="Delete" asp-route-id="@artwork.Id">Delete</a>
        }
    }
    
}
